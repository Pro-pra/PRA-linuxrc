#!/bin/sh

echo && echo
echo "[1;36m""–ú–æ–¥—É–ª–∏ –¥–∏—Å—Ç—Ä–∏–±—É—Ç–∏–≤–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã. –°–∫–æ—Ä–µ–µ –≤—Å–µ–≥–æ –í—ã –∏—Å–ø–æ–ª—å–∑—É–µ—Ç–µ –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ–º–æ–µ –∑–∞–≥—Ä—É–∑–æ—á–Ω–æ–µ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–æ (SCSI –∏–ª–∏ —Å—Ç–∞—Ä—ã–π PCMCIA).
–†–µ—à–µ–Ω–∏–µ: –°–∫–æ–ø–∏—Ä—É–π—Ç–µ –ø–∞–ø–∫—É /$FOLDER —Å –≤–∞—à–µ–≥–æ –∑–∞–≥—Ä—É–∑–æ—á–Ω–æ–≥–æ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞ –Ω–∞ IDE/SATA –¥–∏—Å–∫, –Ω–∞–ø—Ä–∏–º–µ—Ä, –≤ /mnt/sda1/$FOLDER –∏–ª–∏ C:\\$FOLDER
–ò –ø–æ–ø—Ä–æ–±—É–π—Ç–µ –∑–∞–≥—Ä—É–∑–∏—Ç—å —Å–Ω–æ–≤–∞.
–£–¥–æ—Å—Ç–æ–≤–µ—Ä—å—Ç–µ—Å—å —á—Ç–æ –í–∞—à–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä—ã –∑–∞–≥—Ä—É–∑–∫–∏ (cheatcodes) –≤–µ—Ä–Ω—ã.
–ü—Ä–∏ —Å–µ—Ç–µ–≤–æ–π –∑–∞–≥—Ä—É–∑–∫–µ - –ø—Ä–æ–≤–µ—Ä—å—Ç–µ –≤–∫–ª—é—á–µ–Ω –ª–∏ –¥—Ä–∞–π–≤–µ—Ä –≤–∞—à–µ–π —Å–µ—Ç–µ–≤–æ–π –∫–∞—Ä—Ç—ã –≤ –æ–±—Ä–∞–∑ initrd.

–ù–∞–∂–º–∏—Ç–µ –ø—Ä–æ–±–µ–ª/enter –¥–ª—è —Ä–∞–∑–º–æ–Ω—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –≤—Å–µ—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤ –∏ –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∫–∏ –∏–ª–∏ –ª—é–±—É—é –∫–ª–∞–≤–∏—à—É –¥–ª—è –≤—ã—Ö–æ–¥–∞ –≤ –æ—Ç–ª–∞–¥–æ—á–Ω—É—é –∫–æ–Ω—Å–æ–ª—å.""[0m"
read -s -n1 ans
if [ "$ans" = "" ]; then
    umount /mnt/* 2>/dev/null
    umount -a 2>/dev/null
    reboot -f
else
    echo -en "[1;36m""–í–æ—Ç –≤–∞—à–∞ –æ—Ç–ª–∞–¥–æ—á–Ω–∞—è –∫–æ–Ω—Å–æ–ª—å. –†–∞–∑–º–æ–Ω—Ç–∏—Ä—É–π—Ç–µ –≤—Å–µ —Ä–∞–∑–¥–µ–ª—ã –∏ –Ω–∞–∂–º–∏—Ç–µ Ctrl+Alt+Del\n–∫–æ–≥–¥–∞ –∑–∞–∫–æ–Ω—á–∏—Ç–µ.\n\n–£–¥–∞—á–∏!\n""[0m"
    sh
fi